{% extends 'base.html.twig' %}

{% block body %}

<article>
<h2> {{ annonce.title }} </h2>
<div class="metadata">  Posté le {{ annonce.createdAt | date ('d/m/Y') }} à {{ annonce.createdAt | date('H:i') }} dans la catégorie {{ annonce.category.title}} </div>
    <div class="content">
        <img src="{{ annonce.image }}" alt="">
        </div>
</article>

<section id="commentaires"> 

    {% for comment in annonce.comments %}
    <div class="content">
     <div class="row">
        <div class="col-3">
            {{comment.author}} (<small>{{ comment.createdAt | date ('d/m/Y à H:i') }}</small>)
        </div>
        <div class="col">  
            {{comment.content | raw}}

        </div>
    </div>
</div>
    {% endfor %}
</section>
{% endblock body %}